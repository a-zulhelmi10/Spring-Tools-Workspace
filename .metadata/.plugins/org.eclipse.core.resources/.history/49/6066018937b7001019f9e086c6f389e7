package com.spring.club;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping(value = "/api/psg")
public class PlayerController{
	@Autowired
	private PlayerService ps;
	@PostMapping(value = "/create")
	public PlayerDetails createPlayer(@RequestBody PlayerDetails pd) {
		return ps.createPlayer(pd);
	}
	@DeleteMapping(value="/delete/{id}")
	public void removePlayerById(@PathVariable Integer id) {
		ps.removePlayerById(id);
	}
	@PutMapping(value="/update/{id}/{salary}")
	public PlayerDetails updatePlayer(@PathVariable Integer id, @PathVariable double salary) {
		return ps.updatePlayer(id, salary);
	}
	@GetMapping(value="/selectAll")
	public List<PlayerDetails> getAllPlayers() {
		return ps.getAllPlayers();
	}
	@GetMapping(value="/select/{id}")
	public PlayerDetails getPlayer(@PathVariable Integer id) {
		return ps.getPlayer(id);
	}
	
	
}
